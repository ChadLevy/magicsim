<Window x:Class="magicsim.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:magicsim"
        mc:Ignorable="d"
        Title="magicsim" Height="312.138" Width="380.7">
    <Window.Resources>
        <local:ResultData x:Key="resultData"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource resultData}"/>
    </Window.DataContext>
    <Grid Margin="0,0,3.667,-0.333">
        <ScrollViewer HorizontalAlignment="Left" Margin="24,42,0,123" Width="325"  Height="118">
            <ItemsControl ItemsSource="{Binding Path=MergedResults}" Width="325" Height="Auto">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Height="26" Width="325" BorderBrush="Gray" Background="Gray" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Height="26" Width="325" >
                                <Label Background="#F3F3F3" Width="100" Content="{Binding Path=Name}"/>
                                <Label Width="100" Content="{Binding Path=Spec}"/>
                                <Label Background="#F3F3F3" Width="70" Content="{Binding Path=Dps}"/>
                                <Label Background="#F3F3F3" Padding="0 4.5 2 0" Width="38" Content="{Binding Path=DpsBoost}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <StackPanel Name="General" Orientation="Horizontal" Margin="24,160,0.333,73" Height="50">
            <Label Content="Damocleysius" FontSize="12"/>
            <Label Content=" - " FontSize="12"/>
            <Label Content="2400000.23" FontSize="12"/>
            <Label Content=" (" FontSize="12"/>
            <Label Content="2400000000.23" FontSize="12"/>
            <Label Content=" Total  )" FontSize="12"/>
        </StackPanel>
        <StackPanel Name="StatWeights" Orientation="Vertical" Margin="24,186,21.333,42" Background="#F3F3F3" Height="55">
            <Label Content="Pawn String: " FontSize="8"/>
            <TextBox IsReadOnly="True" VerticalAlignment="Center" FontSize="8" Text="( Pawn: v1: 'Semidash_tos_selfsim': Class=Priest, Spec=Shadow, Intellect=1, Versatility=1.4353, HasteRating=1.3647, MasteryRating=1.3221, CritRating=1.7941 )" HorizontalScrollBarVisibility="Visible" Width="326" Height="35" RenderTransformOrigin="0.515,1.255" Margin="0,0,0,-2.333"/>
        </StackPanel>
        <Button Content="Done" HorizontalAlignment="Left" Margin="147,248,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Results - " HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="72,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
