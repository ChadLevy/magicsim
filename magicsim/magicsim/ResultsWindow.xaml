<Window x:Class="magicsim.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:magicsim"
        mc:Ignorable="d"
        Title="magicsim" Height="312.138" Width="410.224">
    <Window.Resources>
        <local:ResultData x:Key="resultData"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource resultData}"/>
    </Window.DataContext>
    <Grid Margin="0,0,3.667,-0.333">
        <ListBox ItemsSource="{Binding Path=MergedResults}" SelectedItem="{Binding Path=SelectedPlayer}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="118" Margin="24,40,25.666,125">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" Margin="0,0,0,0"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="true">
                            <Setter Property="Background" Value="LightGray"/>
                        </Trigger>
                    </Style.Triggers>
                    <Setter Property="Background" Value="WhiteSmoke"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <!-- Light Gray / F3F3F3-->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Height="26" Width="325" BorderBrush="Gray" BorderThickness="1" Padding="0">
                        <StackPanel Orientation="Horizontal" Height="26" Width="325" >
                            <Label Width="100" Content="{Binding Path=Name}"/>
                            <Label Width="100" Content="{Binding Path=Spec}"/>
                            <Label Width="70" Content="{Binding Path=Dps}"/>
                            <Label Padding="0 4.5 2 0" Width="38" Content="{Binding Path=DpsBoost}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Name="StatWeights" Orientation="Vertical" Background="#F3F3F3" Height="80" Margin="24,163,25.666,40">
            <Label Content="{Binding Path=SummaryString}" FontSize="10" MinHeight="23"/>
            <Label Content="Pawn String: " FontSize="8"/>
            <TextBox IsReadOnly="True" VerticalAlignment="Center" FontSize="8" Text="{Binding Path=PawnString}" HorizontalScrollBarVisibility="Visible" Height="36" RenderTransformOrigin="0.515,1.255" Margin="0,0,0,-2.333" HorizontalAlignment="Left" Width="350"/>
        </StackPanel>
        <Button Content="Done" HorizontalAlignment="Left" Margin="147,248,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Results - " HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path=Tag}" HorizontalAlignment="Left" Margin="72,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
